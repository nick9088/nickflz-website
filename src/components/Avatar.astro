---
import { Image } from 'astro:assets';

interface Props {
  class?: string;
  width: number;
  height: number;
}

const { class: className, width, height } = Astro.props;
---

<Image
  class:list={[className, 'aspect-square overflow-hidden rounded-full']}
  {width}
  {height}
  src="/avatar.jpg"
  alt="Avatar"
/>