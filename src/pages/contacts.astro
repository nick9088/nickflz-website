---

<Layout>
	<h1 class="font-bold text-3xl py-5">Contacts</h1>
	<div>
		<p class="py-3">you can find me on the following platforms:</p>
		<h1 class="font-bold text-2xl py-3">Messaging Platforms</h1>
		<ul class="list-disc py-3 list-inside">
			<li>
				<a href="#" class="copy-to-clipboard" data-copy="nick909_.">Discord</a>
			</li>
			<li>
				<a href="mailto:thisisnick909@gmail.com">Mail</a>
			</li>
			<li>
				<a href="https://t.me/niick909">Telegram</a>
			</li>
		</ul>
		<h1 class="font-bold text-2xl py-3">Other Socials</h1>
		<ul class="list-disc py-3 list-inside">
			<li>
				<a href="https://bsky.app/profile/nickflz.com">Bluesky</a>
			</li>
		</ul>
	</div>
</Layout>
	<script>
		const copyLinks = document.querySelectorAll("a.copy-to-clipboard");

		copyLinks.forEach((link) => {
			link.addEventListener("click", (event) => {
				event.preventDefault();

				const textToCopy = link.getAttribute("data-copy");

				navigator.clipboard
					.writeText(textToCopy)
					.then(() => {
						link.textContent = "Copied to clipboard!";
						setTimeout(() => {
							link.textContent = "Discord";
						}, 2000);
					})
					.catch((error) => {
						console.error(
							"Error copying text to clipboard:",
							error,
						);
					});
			});
		});
	</script>
