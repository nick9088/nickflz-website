---
import './src/styles/global.css';
import Navbar from "../components/Navbar.astro";
import Footer from '../components/Footer.astro';
import { ClientRouter } from "astro:transitions";
import { fade } from "astro:transitions";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>FLZA</title>
	</head>
	<body class="bg-black text-white mx-auto max-w-screen-md text-xl">
		<Navbar></Navbar>
		<div transition:animate={fade({ duration: "0.4s" })}>
			<slot />
			<ClientRouter />
		</div>
		<Footer></Footer>
	</body>
</html>

<style>
	@import url('https://fonts.cdnfonts.com/css/aktiv-grotesk-cd-trial');
	body {
		padding: 0 1.5rem 1.5rem 1.5rem;
		font-family: 'Aktiv Grotesk Trial', sans-serif;
	}
</style>
